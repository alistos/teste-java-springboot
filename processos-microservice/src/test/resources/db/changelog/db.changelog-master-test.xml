<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="alisson">
        <createTable tableName="processo_test">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="numero" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="reu_test">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="processo_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="reu_test"
                                 baseColumnNames="processo_id"
                                 referencedTableName="processo_test"
                                 referencedColumnNames="id"
                                 constraintName="fk_reu_processo"/>
    </changeSet>
</databaseChangeLog>